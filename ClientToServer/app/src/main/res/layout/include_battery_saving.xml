<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/card_normal">
    <LinearLayout
        android:id="@+id/id_plugin_battery_content_layout"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.5"
        android:orientation="vertical" >

        <View
            style="@style/CommonLineStyle" />

        <TextView
            android:id="@+id/id_plugin_battery_powermanager_textview"
            style="@style/tipstext"
            android:text="@string/IDS_plugin_battery_power_management" />

        <View style="@style/CommonLineStyle" />

        <LinearLayout
            android:id="@+id/id_plugin_battery_power_save"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="@dimen/list_item_height_icon_1text"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/id_plugin_battery_power_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:background="@drawable/battery_smart_saving" />

            <TextView
                android:id="@+id/id_plugin_battery_power_save_tip"
                style="@style/black_default"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="4.5"
                android:gravity="center_vertical"
                android:paddingLeft="10.0dip"
                android:text="@string/IDS_plugin_battery_smart_saving" />
            <Switch
                android:id="@+id/switch_smart_saving"
                android:layout_height="60dip"
                android:layout_width="wrap_content"
                />
        </LinearLayout>


        <View style="@style/CommonLineStyle" />

        <LinearLayout
            android:id="@+id/id_plugin_battery_wifi_auto_open"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="@dimen/list_item_height_icon_1text" >

            <ImageView
                android:id="@+id/id_plugin_battery_wifi_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10.0dip"
                android:background="@drawable/battery_wifi" />

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_weight="4.5"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/id_plugin_battery_wifi_auto_open_tip"
                    style="@style/black_default"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:text="@string/IDS_plugin_battery_wlan_saving" />

                <TextView
                    android:id="@+id/id_plugin_battery_auto_wifi_tip"
                    style="@style/black_12sp_65alpha"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="10.0dip"
                    android:text="@string/IDS_plugin_battery_wlan_saving_description" />
            </LinearLayout>

            <Switch
                android:id="@+id/switch_wifi_auto"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                />
        </LinearLayout>

        <View style="@style/CommonLineStyle" />

        <LinearLayout
            android:id="@+id/id_plugin_battery_power_details"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />
    </LinearLayout>

</LinearLayout>