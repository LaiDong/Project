<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:setting="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#fff7f7f7"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ScrollView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/profile_utils_layout"
            android:layout_alignParentTop="true" >

            <LinearLayout
                android:id="@+id/profile_manage_list"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" />
        </ScrollView>

        <LinearLayout
            android:id="@id/profile_utils_layout"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/tool_bar_height"
            android:layout_alignParentBottom="true"
            android:background="@color/parent_ctrl_btm_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/profile_delete_btn"
                style="@style/ParentControlBottom"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:background="@drawable/setting_bg"
                android:drawableTop="@drawable/ic_delete_btm"
                android:gravity="center"
                android:paddingBottom="0.0dip"
                android:paddingTop="0.0dip"
                android:text="@string/IDS_common_btn_delete" />

            <TextView
                android:id="@+id/profile_add_btn"
                style="@style/ParentControlBottom"
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_weight="0.5"
                android:background="@drawable/setting_bg"
                android:drawableTop="@drawable/ic_add_normal"
                android:gravity="center"
                android:paddingBottom="0.0dip"
                android:paddingTop="0.0dip"
                android:text="@string/IDS_plugin_settings_profile_new" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>