<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="4dp"
    android:orientation="vertical">
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100.0dip"
        android:background="#ffffffff"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgAvaTracNghiem"
            android:layout_width="90.0dip"
            android:layout_height="90.0dip"
            android:layout_gravity="center"
            android:layout_marginLeft="5.0dip"
            android:src="@drawable/interview_icon"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="100.0dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvTitleTracNghiem"
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_marginLeft="5.0dip"
                android:layout_weight="3.0"
                android:text="Kiểm tra kỹ năng phỏng vấn của bạn"
                android:textColor="#ff565656"
                android:textSize="16.0sp" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="2.0"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:src="@drawable/time_clock" />

                <TextView
                    android:id="@+id/tvTimeTracNghiem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="10 phút"
                    android:textColor="#ff565656"
                    android:textSize="12.0sp" />

                <ImageView
                    android:layout_width="20.0dip"
                    android:layout_height="20.0dip"
                    android:layout_marginLeft="15.0dip"
                    android:src="@drawable/sentence" />

                <TextView
                    android:id="@+id/tvNumberQuestionTracNghiem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="5 câu"
                    android:textColor="#ff565656"
                    android:textSize="12.0sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0.0dip"
                android:layout_marginLeft="10.0dip"
                android:layout_weight="2.0"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/imgStar1"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip" />

                <ImageView
                    android:id="@+id/imgStar2"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip" />

                <ImageView
                    android:id="@+id/imgStar3"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip" />

                <ImageView
                    android:id="@+id/imgStar4"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip" />

                <ImageView
                    android:id="@+id/imgStar5"
                    android:layout_width="30.0dip"
                    android:layout_height="30.0dip" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
    </android.support.v7.widget.CardView>