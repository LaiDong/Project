<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/status_bar_layout_resource"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <ImageView
        android:id="@+id/back_status_bar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/pading_for_status_bar_item"
        android:layout_marginRight="@dimen/pading_for_status_bar_item"
        android:background="@drawable/custome_back_stb_iv"
        android:focusable="true" />

    <ImageView
        android:id="@+id/hide_status_bar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:background="@drawable/custome_hidden_stb_iv"
        android:focusable="true" />

    <ImageView
        android:id="@+id/home_status_bar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/pading_for_status_bar_item"
        android:layout_marginRight="@dimen/pading_for_status_bar_item"
        android:layout_toRightOf="@id/back_status_bar_btn"
        android:background="@drawable/custome_home_stb_iv"
        android:focusable="true" />

    <ImageView
        android:id="@+id/recent_apps_status_bar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/pading_for_status_bar_item"
        android:layout_marginRight="@dimen/pading_for_status_bar_item"
        android:layout_toRightOf="@id/home_status_bar_btn"
        android:background="@drawable/custome_recentapp_stb_iv"
        android:focusable="true" />

    <ImageView
        android:id="@+id/volume_plus_status_bar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/hide_status_bar_btn"
        android:focusable="true"
        android:paddingLeft="@dimen/pading_for_status_bar_item"
        android:paddingRight="@dimen/pading_for_status_bar_item"
        android:src="@drawable/volum_plus_taskbar_01" />

    <ImageView
        android:id="@+id/volume_minus_status_bar_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/volume_plus_status_bar_btn"
        android:focusable="true"
        android:paddingLeft="@dimen/pading_for_status_bar_item"
        android:paddingRight="@dimen/pading_for_status_bar_item"
        android:src="@drawable/volum_down_taskbar_03" />

</RelativeLayout>