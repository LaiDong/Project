<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/full_image_layout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <RelativeLayout
        android:id="@+id/full_screen_RL"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <ImageView
            android:id="@+id/full_screen_iv"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:adjustViewBounds="true"
            android:gravity="center"
            android:scaleType="centerInside" />

        <include
            android:id="@+id/statusbar_in_full_screen_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            layout="@layout/status_bar_layout" />

        <ImageView
            android:id="@+id/showStatusBarIv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/statusbar_in_full_screen_layout"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:src="@drawable/show_taskbar__02" />

        <ImageView
            android:id="@+id/hiddenIvFullScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/statusbar_in_full_screen_layout"
            android:layout_alignParentRight="true"
            android:src="@drawable/hidden" />

        <ImageView
            android:id="@+id/choose_folder_galary_iv_fullscreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/statusbar_in_full_screen_layout"
            android:layout_alignParentRight="true"
            android:padding="1.0dip"
            android:src="@drawable/album_slide_01" />
    </RelativeLayout>

</FrameLayout>